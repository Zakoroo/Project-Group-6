<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Main layout container -->

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="613.0" prefWidth="881.0" xmlns="http://javafx.com/javafx/23.0.1"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.ChatController">

   <!-- Top section: User info and sign out button -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #92c1ff;"
         BorderPane.alignment="BOTTOM_RIGHT">
         <children>
            <!-- User profile image -->
            <ImageView fx:id="profileImageView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true"
               preserveRatio="true">
               <image>
                  <Image url="@../../../../../../../../../../Downloads/user%20(1).png" />
               </image>
            </ImageView>
            <!-- Current user label -->
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Current user" />
            <!-- Sign out button -->
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Button fx:id="signOutButton" mnemonicParsing="false" onAction="#handleSignOut"
                     style="-fx-background-radius: 8px; -fx-font-weight: bold; -fx-background-color: #f38078;"
                     text="SIGN OUT">
                     <graphic>
                        <FontAwesomeIconView fill="#a82b2b" glyphName="SIGN_OUT" size="24" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>

   <!-- Left section: Joined groups list and add group button -->
   <left>
      <VBox spacing="10.0" style="-fx-background-color: white;">
         <children>
            <!-- Joined groups label -->
            <Label style="-fx-font-weight: bold;" text="Joined groups" />
            <!-- Scrollable list of joined groups -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefWidth="200.0"
               style="-fx-border-color: white;" VBox.vgrow="ALWAYS">
               <content>
                  <ListView fx:id="groupListView" style="-fx-background-radius: 4px;" />
               </content>
            </ScrollPane>
            <!-- Add group button -->
            <HBox alignment="CENTER_LEFT" maxHeight="50.0" maxWidth="150.0" minHeight="50.0"
               minWidth="150.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="addGroupButton" mnemonicParsing="false" onAction="#handleAddGroup"
                     style="-fx-background-radius: 8px; -fx-font-weight: bold;" text="ADD GROUP">
                     <graphic>
                        <FontAwesomeIconView fill="#003a80" glyphName="PLUS_CIRCLE" size="24" />
                     </graphic>
                  </Button>
                  <Button fx:id="connectToChat" mnemonicParsing="false"
                     onAction="#handleConnectToChat" prefHeight="26.0" prefWidth="53.0" text="conn" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>

   <!-- Center section: Chat messages -->
   <center>
      <ScrollPane fx:id="chatScrollPane" fitToWidth="true" hbarPolicy="NEVER"
         style="-fx-border-color: white;">
         <content>
            <VBox fx:id="chatVBox" spacing="10.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </content>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ScrollPane>
   </center>


   <!-- Bottom section: Message input area -->
   <bottom>
      <VBox prefHeight="79.0" prefWidth="704.0" spacing="10.0"
         style="-fx-background-color: #e6e6e6;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <!-- Attach file button -->
                  <Button fx:id="attachFileButton" mnemonicParsing="false"
                     onAction="#handleAttachFile"
                     style="-fx-background-radius: 100; -fx-background-color: #c5c5c5;">
                     <graphic>
                        <FontAwesomeIconView fill="#f7f7f7" glyphName="PAPERCLIP" size="24" />
                     </graphic>
                  </Button>
                  <!-- Message input field -->
                  <TextField fx:id="messageTextField" promptText="Type in your message ..."
                     HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
                  <!-- Send message button -->
                  <Button fx:id="sendButton" layoutX="617.0" layoutY="21.0" mnemonicParsing="false"
                     onAction="#handleSendMessage"
                     style="-fx-background-radius: 8px; -fx-font-weight: bold;" text="SEND">
                     <graphic>
                        <FontAwesomeIconView fill="#003a80" glyphName="PAPER_PLANE" size="24" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <!-- Error message label -->
            <Label fx:id="errorMessageLabel" style="-fx-text-fill: #ff5e5e;"
               text="Error messages should appear here!" textFill="#ff5e5e" />
         </children>
      </VBox>
   </bottom>
</BorderPane>