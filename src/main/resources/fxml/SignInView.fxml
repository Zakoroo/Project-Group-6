<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="client.controllers.SignInController"
            prefHeight="388.0" 
            prefWidth="345.0">

    <children>
        <VBox alignment="TOP_CENTER" prefHeight="388.0" prefWidth="345.0"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <!-- Top bar -->
                <HBox alignment="CENTER" prefHeight="75.0" prefWidth="345.0" style="-fx-background-color: #007bff;">
                    <children>
                        <Text fill="WHITE" text="Chat application">
                            <font>
                                <Font name="Microsoft Sans Serif" size="24.0" />
                            </font>
                        </Text>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>

                <!-- Main content -->
                <VBox alignment="CENTER" prefHeight="302.0" prefWidth="345.0">
                    <children>
                        <TextField fx:id="usernameField" 
                                   prefHeight="30.0" prefWidth="255.0" 
                                   promptText="Enter username" 
                                   style="-fx-background-radius: 8px;">
                            <VBox.margin>
                                <Insets bottom="5.0" left="40.0" right="40.0" top="5.0" />
                            </VBox.margin>
                        </TextField>

                        <PasswordField fx:id="passwordField" 
                                      prefHeight="30.0" prefWidth="255.0" 
                                      promptText="Enter password" 
                                      style="-fx-background-radius: 8px;">
                            <VBox.margin>
                                <Insets bottom="5.0" left="40.0" right="40.0" top="5.0" />
                            </VBox.margin>
                        </PasswordField>

                        <HBox alignment="CENTER" prefHeight="43.0" prefWidth="345.0" spacing="48.0">
                            <children>
                                <Hyperlink fx:id="register" text="Register now" />
                                <Button fx:id="signin" 
                                        text="SIGN IN" 
                                        textFill="WHITE"
                                        defaultButton="true" 
                                        onAction="#btnSignIn"
                                        style="-fx-background-color: #007bff;"
                                        mnemonicParsing="false"
                                        prefHeight="30.0" prefWidth="91.0" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>

                        <HBox alignment="CENTER" prefHeight="36.0" prefWidth="345.0">
                            <children>
                                <Label fx:id="errorlabel" 
                                       text="Error message placeholder" 
                                       textFill="#c04646" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
